        "import requests\n",
        // Librería para realizar solicitudes HTTP a APIs externas
        "import json\n",
        // Librería para manejar datos en formato JSON
        "\n",
        "API_URL = \"https://www.air-port-codes.com/api/v1/multi\"\n",
        // URL del endpoint de la API para consultar códigos IATA
        "API_KEY = \"d4ad68a761\"\n",
        // Clave de autenticación para acceder a la API
        "\n",
        "IATA_FALLBACK = {\n",
        // Diccionario de respaldo para códigos IATA cuando la API no responde
        "    \"Madrid\": \"MAD\",\n",
        // Código IATA del aeropuerto principal de Madrid
        "    \"Quito\": \"UIO\",\n",
        // Código IATA del aeropuerto principal de Quito
        "    \"Bogota\": \"BOG\",\n",
        // Código IATA del aeropuerto principal de Bogotá
        "    \"Barcelona\": \"BCN\",\n",
        // Código IATA del aeropuerto principal de Barcelona
        "    \"Frankfurt\": \"FRA\",\n",
        // Código IATA del aeropuerto principal de Frankfurt
        "    \"Berlin\": \"BER\",\n",
        // Código IATA del aeropuerto principal de Berlín
        "    \"Roma\": \"FCO\",\n",
        // Código IATA del aeropuerto principal de Roma
        "    \"Sevilla\": \"SVQ\"\n",
        // Código IATA del aeropuerto principal de Sevilla
        "}\n"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "def obtener_iata(ciudad):\n",
        "    headers = {\n",
        "        \"Content-Type\": \"application/json\",\n",
        "        \"APC-Auth\": API_KEY\n",
        "    }\n",
        "\n",
        "    payload = {\"cities\": [ciudad]}\n",
        "\n",
        "    try:\n",
        "        response = requests.post(API_URL, headers=headers, json=payload, timeout=10)\n",
        "\n",
        "        if response.status_code != 200:\n",
        "            return IATA_FALLBACK.get(ciudad, \"N/A\")\n",
        "\n",
        "        data = response.json()\n",
        "\n",
        "        if \"cities\" in data and ciudad in data[\"cities\"] and data[\"cities\"][ciudad]:\n",
        "            return data[\"cities\"][ciudad][0].get(\"iata\", \"N/A\")\n",
        "\n",
        "    except Exception:\n",
        "        pass\n",
        "\n",
        "    return IATA_FALLBACK.get(ciudad, \"N/A\")\n"
      ],
     
